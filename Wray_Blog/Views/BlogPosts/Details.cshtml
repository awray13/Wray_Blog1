@using Wray_Blog.Models
@model BlogPost

    <div class="container">
        <div class="row">
            <!-- Latest Posts -->
            <main class="post blog-post col-lg-8">
                <div class="container">
                    
                <div class="post-single">
                    <div class="post-thumbnail">
                        <img src="~/Images/temp-tate.jpg" alt="..." class="img-fluid" />
                    </div>
                    <div class="post-details">
                        <div class="post-meta d-flex justify-content-between">
                            @*<div class="category"><a href="#">Business</a><a href="#">Financial</a></div>*@
                        </div>
                        <h1>@Model.Title<a href="#"><i class="fa fa-bookmark-o"></i></a></h1>
                            <h4>@Model.Abstract</h4>
                        <div class="post-footer d-flex align-items-center flex-column flex-sm-row">
                            <a href="#" class="author d-flex align-items-center flex-wrap">
                                <div class="avatar"><img src="~/Images/profile.jpg" alt="..." class="img-fluid"></div>
                                <div class="title"><span>Ashton Wray</span></div>
                            </a>
                            <div class="d-flex align-items-center flex-wrap">
                                <div class="date"><i class="icon-clock"></i>@Model.Created.ToString("MMM dd, yyyy")</div>
                                <div class="views"><i class="icon-eye"></i> 500</div>
                                <div class="comments meta-last"><i class="icon-comment"></i>12</div>
                            </div>
                        </div>
                        <div class="post-body">
                            <p>@Html.Raw(Model.Body)</p>
                        </div>

                        @if (User.IsInRole("Admin")){
                            <div class="post-tags">
                                <a href="@Url.Action("Edit", "BlogPosts", new { Model.Id })" class="tag">Edit Post</a>
                            </div>
                        }
                        <div class="posts-nav d-flex justify-content-between align-items-stretch flex-column flex-md-row">
                            <a href="#" class="prev-post text-left d-flex align-items-center">
                                <div class="icon prev"><i class="fa fa-angle-left"></i></div>
                                <div class="text">
                                    <strong class="text-primary">Previous Post </strong>
                                    <h6>I Bought a Wedding Dress.</h6>
                                </div>
                            </a><a href="#" class="next-post text-right d-flex align-items-center justify-content-end">
                                <div class="text">
                                    <strong class="text-primary">Next Post </strong>
                                    <h6>I Bought a Wedding Dress.</h6>
                                </div>
                                <div class="icon next"><i class="fa fa-angle-right"></i></div>
                            </a>
                        </div>
                        

                        @* posted comments section *@
                        <div class="post-comments">
                            <header>
                                <h3 class="h6">Post Comments<span class="no-of-comments">(3)</span></h3>
                            </header>
                            <div class="comment">
                                <div class="comment-header d-flex justify-content-between">
                                    <div class="user d-flex align-items-center">
                                        <div class="image"><img src="~/Images/user.svg" alt="..." class="img-fluid rounded-circle"></div>
                                        <div class="title"><strong>Jabi Hernandiz</strong><span class="date">May 2016</span></div>
                                    </div>
                                </div>
                                <div class="comment-body">
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.</p>
                                </div>
                            </div>
                            <div class="comment">
                                <div class="comment-header d-flex justify-content-between">
                                    <div class="user d-flex align-items-center">
                                        <div class="image"><img src="~/Images/user.svg" alt="..." class="img-fluid rounded-circle"></div>
                                        <div class="title"><strong>Nikolas</strong><span class="date">May 2016</span></div>
                                    </div>
                                </div>
                                <div class="comment-body">
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.</p>
                                </div>
                            </div>
                            <div class="comment">
                                <div class="comment-header d-flex justify-content-between">
                                    <div class="user d-flex align-items-center">
                                        <div class="image"><img src="~/Images/user.svg" alt="..." class="img-fluid rounded-circle"></div>
                                        <div class="title"><strong>John Doe</strong><span class="date">May 2016</span></div>
                                    </div>
                                </div>
                                <div class="comment-body">
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Ut enim ad minim veniam.</p>
                                </div>
                            </div>
                        </div>
                        @* added comments section *@
                        <div class="add-comment">
                            <header>
                                <h3 class="h6">Leave a reply</h3>
                            </header>
                            <form action="#" class="commenting-form">
                                <div class="row">
                                    <div class="form-group col-md-6">
                                        <input type="text" name="username" id="username" placeholder="Name" class="form-control">
                                    </div>
                                    <div class="form-group col-md-6">
                                        <input type="email" name="username" id="useremail" placeholder="Email Address (will not be published)" class="form-control">
                                    </div>
                                    <div class="form-group col-md-12">
                                        <textarea name="usercomment" id="usercomment" placeholder="Type your comment" class="form-control"></textarea>
                                    </div>

                                    <div class="form-group col-md-12">
                                        @if (User.Identity.IsAuthenticated)
                                        {
                                            <button type="submit" class="btn btn-secondary">Submit Comment</button>
                                        }
                                        else
                                        {
                                            
                                            <button type="submit" class="btn btn-outline-secondary">@Html.ActionLink("Please login to submit a comment", "Login", "Account", null, new { @style ="color: #444;", id = "loginLink" })</button>
                                            
                                        }
                                    </div>
                                   

                                </div>
                            </form>
                        </div>
                    </div>
                </div>
                </div>
            </main>
            @* Here is where the aside starts, still trying to determine if I'm going to keep it. *@
